<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#FFF</item>

        <item name="actionBarTheme">@style/MyApp.ActionBarTheme</item>
    </style>

    <style name="MyApp.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/primaryTextColorDark</item>
    </style>

    <!-- FAQ style -->
    <style name="sectionHeader" parent="android:Widget.Holo.Light.TextView">
        <item name="android:drawableBottom">@drawable/help_section_header</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Font styles -->
    <style name="headline" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textSize">@dimen/headline_textSize</item>
        <item name="android:fontFamily">sans-serif-regular</item>
    </style>

    <style name="title" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textSize">@dimen/title_textSize</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="subheader" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textSize">@dimen/subheader_textSize</item>
        <item name="android:fontFamily">sans-serif-regular</item>
    </style>

    <style name="body1" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textSize">@dimen/body1_textSize</item>
        <item name="android:fontFamily">sans-serif-regular</item>
    </style>

    <style name="body2" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textSize">@dimen/body2_textSize</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="menu" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textSize">@dimen/menu_textSize</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="caption" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textSize">@dimen/caption_textSize</item>
        <item name="android:fontFamily">sans-serif-regular</item>
    </style>

    <style name="button" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textSize">@dimen/button_textSize</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/disabledTextColorLight</item>
    </style>
</resources>
